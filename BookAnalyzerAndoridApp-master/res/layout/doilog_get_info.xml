<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >
    
     <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reader name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reader_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Area" 
             android:textSize="16sp"/>

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of the Article"
             android:textSize="16sp" />

        <TextView
            android:id="@+id/article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pages " 
             android:textSize="16sp"/>

        <TextView
            android:id="@+id/pages_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of words"
             android:textSize="16sp" />

        <TextView
            android:id="@+id/words_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView"
             android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average length of words" 
             android:textSize="16sp"/>

        <TextView
            android:id="@+id/avg_words_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of sentences" 
             android:textSize="16sp"/>

        <TextView
            android:id="@+id/sentenses_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView"
             android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average length of sentences"
             android:textSize="16sp" />

        <TextView
            android:id="@+id/avg_senteses_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
            android:text="TextView" 
             android:textSize="16sp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Readability Index "
             android:textSize="16sp" />

        <TextView
            android:id="@+id/ri_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
            android:text="TextView"
             android:textSize="16sp" />
    </TableRow>

</TableLayout>