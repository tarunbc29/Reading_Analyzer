<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/barcode_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_about" />

    <TextView
        android:id="@+id/subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/barcode_image"
        android:text="chandamama" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/page_number"
        android:layout_below="@+id/page_number"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/getInfo_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="GetInfo"
            android:textSize="12sp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Delete"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject_name"
        android:layout_below="@+id/subject_name"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="1 of 10" />

</RelativeLayout>